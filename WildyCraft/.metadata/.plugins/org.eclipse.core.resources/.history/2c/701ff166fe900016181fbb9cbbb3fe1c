package com.didomenico.wildycraft.recipes;

import com.didomenico.wildycraft.blocks.ModBlocks;

import net.minecraft.item.ItemStack;
import net.minecraftforge.fml.common.registry.GameRegistry;

public class ModRecipes {
	
	public static void init() {
		
		/**
		 * examples
		 * 
		 *		shaped
		 * GameRegistry.addShapedRecipe(new ItemStack(Items.RABBIT_STEW), " R ", "CPM", " B ",
		 * 'R', Items.COOKED_RABBIT, 'C', ModItems.corn, 'P', Items.BAKED_POTATO, 'M', 
		 * Blocks.BROWN_MUSHROOM, 'B', Items.BOWL);}
		 * 
		 * 		shapeless
		 * GameRegistry.addShapelessRecipe(new ItemStack(ModItems.cornSeed), ModItems.corn);
		 * 
		 * 
		 * 		furnace 
		 * GameRegistry.addSmelting(ModBlocks.oreCopper, new ItemStack(ModItems.ingotCopper), 0.7f);}

		 */
		
		GameRegistry.addShapelessRecipe(new ItemStack(ModBlocks.blockMarble), ModBlocks.blockRawMarble);

	}

}
